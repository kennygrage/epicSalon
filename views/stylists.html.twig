<html>
    <head>
        <title>Stylist List</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
        <link rel="stylesheet" type="text/css" href="/../main.css">
    </head>
    <body>
        <div class="container">
            <h2>Stylists</h2>
            {% if stylists is not empty %}
                <p>Here are all your stylists:</p>
                <ul class="list-group">
                    {% for stylist in stylists %}
                        <li class="list-group-item">{{ stylist.getStylistName }} <span class="badge tc"><a href="/stylists/{{ stylist.getId }}/edit">Edit</a></span>
                    {% endfor %}
                </ul>
                {% endif %}
                <div>
                    <form action='/stylists' method='post'>
                        <label for='stylist_name'>Stylist Name</label>
                        <input id='stylist_name' name='stylist_name' type='text'>

                        <button type='submit'>Add Stylist</button>
                    </form>
                </div>
                <div>
                    <form action='/delete_stylists' method='post'>
                        <button type='submit'>Clear</button>
                    </form>
                </div>

            <p><a href='/'>Home</a></p>
        </div>
    </body>
</html>
