<html>
    <head>
        <title>Update Stylist</title>

        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
        <link rel="stylesheet" type="text/css" href="/../main.css">
    </head>
    <body>
        <div class="container">
            <h2>Update the {{ stylist.getStylistName }} stylist and view their clients. </h2>

            {% if clients is not empty %}
                Clients for {{ stylist.getStylistName }}
                <ul class="list-group">
                    {% for client in clients %}
                        <li class="list-group-item">{{ client.getClientName }}</li>
                    {% endfor %}
                </ul>
            {% endif %}

            <form action="/stylists/{{ stylist.getId }}" method="post">
                <input name="_method" type="hidden" value="patch">
                <label for="stylist_name">Rename your stylist:</label>
                <input id="stylist_name" name="stylist_name" type="text">

                <button type="submit">Update</button>
            </form>

            <form action="/stylists/{{ stylist.getId }}" method="post">
                <input name="_method" type="hidden" value="delete">

                <button type="submit">Delete this stylist</button>
            </form>
            <p><a href='/'>Home</a></p>
        </div>
    </body>
</html>
